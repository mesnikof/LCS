<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/LinearLayout_Cart_Outer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="10dp"
    android:orientation="vertical"
    android:background="#FFFFFF"
    tools:context="com.cs360.michaelmesnikoff.lcs.MainActivity">

    <TableLayout
        android:id="@+id/tableLayout_Cart_Items"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="#FFFFFF">

        <TextView
            android:id="@+id/textView_Cart_Label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="top|center_horizontal"
            android:layout_marginBottom="16dp"
            android:layout_marginTop="0dp"
            android:gravity="center"
            android:text="@string/label_current_shopping_cart"
            android:textAlignment="center"
            android:textColor="#0000FF"
            android:textSize="24sp"
            android:textStyle="bold"
            android:visibility="visible" />

        <TableRow
            android:id="@+id/tableRow_Cart_Header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView_Cart_ItemHeader"
                android:layout_width="140dp"
                android:layout_height="wrap_content"
                android:paddingStart="5dp"
                android:paddingEnd="0dp"
                android:layout_weight="1"
                android:text="@string/label_item"
                android:textColor="#000000"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView_Cart_PriceHeader"
                android:layout_width="30dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/label_price"
                android:textAlignment="center"
                android:textColor="#000000"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView_Cart_QtyHeader"
                android:layout_width="25dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/label_qty"
                android:textAlignment="center"
                android:textColor="#000000"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView_Cart_TotalHeader"
                android:layout_width="35dp"
                android:layout_height="wrap_content"
                android:paddingStart="0dp"
                android:paddingEnd="0dp"
                android:layout_weight="1"
                android:text="@string/label_total"
                android:textAlignment="center"
                android:textColor="#000000"
                android:textStyle="bold" />
        </TableRow>

        <TableRow
            android:id="@+id/tableRow_Cart_Divider"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView_Cart_D1"
                android:layout_width="140dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/label_item_spacer"
                android:textAlignment="center"
                android:textColor="#000000"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView_Cart_D2"
                android:layout_width="30dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/label_short_spacer"
                android:textAlignment="center"
                android:textColor="#000000"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView_Cart_D3"
                android:layout_width="25dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/label_short_spacer"
                android:textAlignment="center"
                android:textColor="#000000"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView_Cart_D4"
                android:layout_width="35dp"
                android:paddingStart="0dp"
                android:paddingEnd="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/label_short_spacer"
                android:textAlignment="center"
                android:textColor="#000000"
                android:textStyle="bold" />
        </TableRow>
    </TableLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/LinearLayout_Cart_Items"
        android:layout_margin="10dp"
        android:background="#FFFFFF">

        <ImageButton
            android:id="@+id/imageButton_Cart_Back"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:layout_weight="1"
            android:scaleType="fitCenter"
            android:background="#FFFFFF"
            app:srcCompat="@drawable/go_back_icon" />

        <ImageButton
            android:id="@+id/imageButton_Cart_Discard"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:layout_weight="1"
            android:scaleType="fitCenter"
            android:background="#FFFFFF"
            app:srcCompat="@drawable/clear_icon" />

        <ImageButton
            android:id="@+id/imageButton_Cart_Checkout"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:layout_weight="1"
            android:scaleType="fitCenter"
            android:background="#FFFFFF"
            app:srcCompat="@drawable/dollar_sign_icon" />
    </LinearLayout>
</LinearLayout>

