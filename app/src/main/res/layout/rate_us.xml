<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout_ContactUs"
    android:layout_width="300dp"
    android:layout_height="400dp"
    android:layout_margin="10dp"
    android:animateLayoutChanges="true"
    android:background="#FFFFCF"
    android:backgroundTint="#FFFFCF">

    <TextView
        android:id="@+id/dialogTextView_RateUsTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:text="@string/title_rate_us_dialog"
        android:textColor="#000000"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/dialogTextView_Description"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginTop="24dp"
        android:text="@string/rate_us_description"
        android:textAlignment="center"
        android:textColor="#0000FF"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/dialogTextView_RateUsTitle" />

    <ImageButton
        android:id="@+id/dialogImageButton_rate"
        android:layout_width="169dp"
        android:layout_height="56dp"
        android:layout_marginTop="12dp"
        android:onClick="onRateClick"
        android:scaleType="fitCenter"
        app:layout_constraintHorizontal_bias="0.503"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/dialogTextView_Description"
        app:srcCompat="@drawable/rate_star_button"
        tools:ignore="ContentDescription" />

    <ImageButton
        android:id="@+id/dialogImageButton_TwitterShare"
        android:layout_width="220dp"
        android:layout_height="51dp"
        android:layout_marginBottom="8dp"
        android:background="#FFFFCF"
        android:backgroundTint="#FFFFCF"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toTopOf="@+id/dialogImageButtonOK"
        app:layout_constraintHorizontal_bias="0.512"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:srcCompat="@drawable/twitter_share_button"
        tools:ignore="ContentDescription" />

    <ImageButton
        android:id="@+id/dialogImageButtonOK"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginBottom="8dp"
        android:scaleType="fitXY"
        android:background="#FFFFCF"
        android:backgroundTint="#FFFFCF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:srcCompat="@drawable/go_back_icon"
        tools:ignore="ContentDescription" />

</android.support.constraint.ConstraintLayout>